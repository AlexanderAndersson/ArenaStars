@model ArenaStars.Models.Tournament
@using ArenaStars.Models;
@{
    ViewBag.Title = "Tournaments";
}
<link href="~/Content/TournamentSheet.css" rel="stylesheet" />

<h2>Tournaments</h2>
@foreach (Tournament t in ViewBag.activeTournaments)
{
    <div id="tournamentList">
        <div>
            <span class="bold">STARTS</span> 
            <span>@t.StartDate.Value.Day @t.StartDate.Value.ToString("MMM") - @t.StartDate.Value.ToShortTimeString()</span>                            
        </div>
        <div>
            <span class="bold">NAME</span>
            <span>@t.Name</span>
        </div>
        <div>
            <span class="bold">TYPE</span><br />
            <span>@t.Type</span>
        </div>
        <div>
            <span class="bold">MIN RANK</span>
            <span>@t.MinRank</span>
        </div>
        <div id="participants">
            <span class="glyphicon glyphicon-user"></span><br />
            @if (t.Participants == null)
            {
                <span>0 / @t.PlayerLimit</span>
            }
            else
            {
                <span>@t.Participants / @t.PlayerLimit</span>
            }
            
        </div>         
    </div>
}