<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/SignIn&Up.js"></script>

</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            @Html.ActionLink("ArenaStars", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Tournaments", "Index", "Tournament", new { area = "" }, new { @class = "" })</li>
                    <li class="nav-item">@Html.ActionLink("Leaderboard", "Index", "Leaderboard", new { area = "" }, new { @class = "" })</li>
                    <li class="nav-item">@Html.ActionLink("Banlist", "Index", "Ban", new { area = "" }, new { @class = "" })</li>
                    @if ((bool)Session["isAdmin"])
                    {
                        <li class="nav-item">@Html.ActionLink("Admin", "Index", "Admin", new { area = "" }, new { @class = "" })</li>
                    }
                </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <form class="navbar-form col-sm-3 col-md-4 col-lg-6" role="search">
                        <input type="text" class="form-control mr-sm-2" placeholder="Search" name="searchInput">
                    </form>
                </li>
                @if (!(bool)Session["isLoggedIn"])
                {
                    <li><button class="btn btn-default navbar-btn logInBtn" type="button">LOG IN</button></li>
                    <li><button class="btn btn-primary navbar-btn registerBtn" type="button">SIGN UP</button></li>
                }
                else
                {
                    <li class="navbar-text">Logged in as: <b>@Session["username"]</b></li>
                    <li><button onclick="location.href='@Url.Action("Logout", "User")'" class="btn btn-default navbar-btn logOutBtn" type="button">LOG OUT</button></li>
                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        <footer>
            @*<p>&copy; @DateTime.Now.Year - ArenaStars</p>*@
        </footer>
    </div>
</body>
</html>